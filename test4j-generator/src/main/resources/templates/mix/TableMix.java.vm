package ${cfg.packTableMix};

import ${cfg.packTableMap}.${cfg.fileTableMap};
import org.test4j.hamcrest.matcher.modes.EqMode;
import org.test4j.module.spec.IMix;
import org.test4j.module.spec.annotations.Step;

import static ${cfg.packMP}.${cfg.fileMP}.Table_Name;

/**
 * 数据库${table.name}表数据准备和校验通用方法
 *
 * @author ${author}
 */
public class ${cfg.fileTableMix} implements IMix {
    @Step("清空表[" + Table_Name + "]数据")
    public ${cfg.fileTableMix} clean${cfg.withoutSuffixEntity}Table() {
        db.table(Table_Name).clean();
        return this;
    }

    @Step("准备表[" + Table_Name + "]数据{1}")
    public ${cfg.fileTableMix} ready${cfg.withoutSuffixEntity}Table(${cfg.fileTableMap} data) {
        db.table(Table_Name).insert(data);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有全表数据{1}")
    public ${cfg.fileTableMix} check${cfg.withoutSuffixEntity}Table(${cfg.fileTableMap} data) {
        db.table(Table_Name).query().eqDataMap(data, EqMode.IGNORE_ORDER);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有符合条件{1}的数据{2}")
    public ${cfg.fileTableMix} check${cfg.withoutSuffixEntity}Table(String where, ${cfg.fileTableMap} data) {
        db.table(Table_Name).queryWhere(where).eqDataMap(data, EqMode.IGNORE_ORDER);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有符合条件{1}的数据{2}")
    public ${cfg.fileTableMix} check${cfg.withoutSuffixEntity}Table(${cfg.fileTableMap} where, ${cfg.fileTableMap} data) {
        db.table(Table_Name).queryWhere(where).eqDataMap(data, EqMode.IGNORE_ORDER);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有{1}条符合条件{2}的数据")
    public ${cfg.fileTableMix} count${cfg.withoutSuffixEntity}Table(int count, ${cfg.fileTableMap} where) {
        db.table(Table_Name).queryWhere(where).sizeEq(count);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有{1}条符合条件{2}的数据")
    public ${cfg.fileTableMix} count${cfg.withoutSuffixEntity}Table(int count, String where) {
        db.table(Table_Name).queryWhere(where).sizeEq(count);
        return this;
    }

    @Step("验证表[" + Table_Name + "]有{1}条数据")
    public ${cfg.fileTableMix} count${cfg.withoutSuffixEntity}Table(int count) {
        db.table(Table_Name).query().sizeEq(count);
        return this;
    }
}